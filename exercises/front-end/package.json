{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "sass src/stylesheets/styles.scss public/stylesheets/style.css",
    "start": "node ./bin/www",
    "watch": "concurrently 'npm run watch-scss' 'npm run watch-server'",
    "watch-scss": "sass --watch src/stylesheets/styles.scss public/stylesheets/style.css",
    "watch-server": "nodemon",
    "test": "npm run lint",
    "lint": "eslint --ext .js,.ts . && prettier --check '**/*.{js,ts}'",
    "format": "prettier --write '**/*.{js,ts}'"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-handlebars": "^5.3.2",
    "hbs": "~4.0.4",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "eslint": "^7.31.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "sass": "^1.36.0"
  }
}
